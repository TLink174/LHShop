@model IEnumerable<LHShop.ViewModels.YeuThichVM>
@{
    ViewData["Title"] = "Index";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="~/Hinh/HangHoa/@item.Hinh" alt="" style="width: 50px;">
                                <a class="h6 text-decoration-none text-truncate" asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHH">@item.TenHH</a>
                            </td>
                            <td class="align-middle">$@item.DonGia</td>
                            <td class="align-middle"><a asp-action="DeleteConfirmed" asp-controller="YeuThich" asp-route-id="@item.MaHH" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!-- Cart End -->
