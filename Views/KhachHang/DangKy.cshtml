@model LHShop.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid">
    <div class="row px-xl-5 justify-content-center">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đăng ký</span></h5>
            <form asp-action="DangKy" enctype="multipart/form-data" class="mx-auto">
            <div class="bg-light p-30 mb-5">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.MaKH"></label><sup>*</sup>
                            <input asp-for="@Model.MaKH" class="form-control" type="text" >
                            <span asp-validation-for="@Model.MaKH" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.MatKhau"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" class="form-control" type="text" >
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.HoTen"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" class="form-control" type="text" >
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.NgaySinh"></label><sup>*</sup>
                        <input asp-for="@Model.NgaySinh" class="form-control">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Giới tính</label>
                        <select class="custom-select" asp-for="@Model.GioiTinh">
                            <option selected>Nam</option>
                            <option>Nữ</option>
                            <option>Khác</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.DiaChi"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" class="form-control" type="text">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.DienThoai"></label><sup>*</sup>
                            <input asp-for="@Model.DienThoai" class="form-control" type="text">
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="@Model.Email"></label><sup>*</sup>
                            <input asp-for="@Model.Email" class="form-control" type="text">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Hinh">Hình</label><sup>*</sup>
                    <input name="Hinh" class="form-control" type="file">
                </div>
                <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Đăng Ký</button>
            </div>
            </form>
        </div>
    </div>
</div>