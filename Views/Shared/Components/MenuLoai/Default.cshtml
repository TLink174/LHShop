@model LHShop.ViewModels.CompositeVM

<!-- Shop Sidebar Start -->
<div class="col-lg-3 col-md-4">
    <!-- Price Start -->
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Danh mục</span></h5>
    <div class="bg-light p-4 mb-30">
            @foreach (var item in Model.MenuLoaiVMs)
            {
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                <a asp-controller="Hanghoa" asp-action="Index" asp-route-loai="@item.MaLoai" style="color: black">
                    <label>@item.TenLoai</label>
                </a>

                    <span class="badge border font-weight-normal">@item.SoLuong</span>
                </div>
            }
    </div>
    <!-- Price End -->
</div>
<!-- Shop Sidebar End -->