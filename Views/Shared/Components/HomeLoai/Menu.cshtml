@model LHShop.ViewModels.CompositeVM
@foreach (var item in Model.MenuLoaiVMs)
{
    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <a class="text-decoration-none" asp-controller="Hanghoa" asp-action="Index" asp-route-loai="@item.MaLoai">
            <div class="cat-item d-flex align-items-center mb-4">
                <div class="overflow-hidden" style="width: 100px; height: 100px;">
                    <img class="img-fluid" src="~/Hinh/Loai/@item.Hinh" alt="">
                </div>
                <div class="flex-fill pl-3">
                    <h6>@item.TenLoai</h6>
                    <small class="text-body">@item.SoLuong Sản phẩm</small>
                </div>
            </div>
        </a>
    </div>
}
