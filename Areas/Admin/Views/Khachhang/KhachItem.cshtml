@model X.PagedList.IPagedList<LHShop.Data.Khachhang>
@using X.PagedList.Mvc.Core
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaKh</td>
            <td>@item.MatKhau</td>
            <td>@item.HoTen</td>
            <td>@item.DiaChi</td>
            <td>@item.DienThoai</td>
            <td>@item.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.MaKh" onsubmit="return confirmDelete()">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.MaKh">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>

                    <input type="hidden" name="id" value="@item.MaKh" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</tbody>
