
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MaLoai
            </td>
            <td>
                @item.TenLoai
            </td>
            <td>
                @item.TenLoaiAlias
            </td>
            <td>
                @item.MoTa
            </td>
            <td>
                <img src="~/Hinh/Loai/@item.Hinh" style="width: 50px"/>
            </td>
            <td class="project-actions text-right">
                <form asp-action="Delete" asp-route-id="@item.MaLoai" onsubmit="return confirmDelete()">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.MaLoai">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>

                    <input type="hidden" name="id" value="@item.MaLoai" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</tbody>
