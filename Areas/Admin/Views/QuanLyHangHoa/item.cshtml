       <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaHh</td>
                        <td>@item.TenHh</td>
                        <td>@item.TenAlias</td>
                        <td>@item.MaLoai</td>
                        <td>@item.DonGia</td>
                        <td>
                            <img src="@Url.Content("~/Hinh/HangHoa/" + item.Hinh)" alt="Hình" width="100" />
                        </td>
                        <td>@item.NgaySx</td>
                        <td>@item.GiamGia</td>
                        <td>@item.MaNcc</td>
            <td class="project-actions text-right">
                <form asp-action="Delete" asp-route-id="@item.MaHh" onsubmit="return confirmDelete()">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.MaHh">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>

                    <input type="hidden" name="id" value="@item.MaHh" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </td>
                    </tr>
                }
            </tbody>
           