@model IEnumerable<LHShop.Data.Nhacungcap>

<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNcc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenCongTy)
            </td>
            <td>
                <img src="~/Hinh/NhaCC/@Html.DisplayFor(modelItem => item.Logo)" alt="Alternate Text" style="width: 50px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiLienLac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td class="project-actions text-right">
                <form asp-action="Delete" asp-route-id="@item.MaNcc" onsubmit="return confirmDelete()">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.MaNcc">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>

                    <input type="hidden" name="id" value="@item.MaNcc" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }
